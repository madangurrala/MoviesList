@page
@model MovieList.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h2 class="text-info">Create New Movie</h2>
<br/>
<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly">

        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Movie.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Movie.Name" class="form-control" />
            </div>
            <span asp-validation-for="Movie.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Movie.Director"></label>
            </div>
            <div class="col-5">
                <input asp-for="Movie.Director" class="form-control" />
            </div>
            <span asp-validation-for="Movie.Director" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Movie.Production"></label>
            </div>
            <div class="col-5">
                <input asp-for="Movie.Production" class="form-control" />
            </div>
            <span asp-validation-for="Movie.Production" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control"/>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}
