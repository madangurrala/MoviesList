@page
@model MovieList.IndexModel
@{
    ViewData["Title"] = "Index";
}

    <div class="container row p-0 m-0">
        <div class="col-9">
            <h2 class="text-info">Movie List</h2>
        </div>
        <div class="col-3">
            <a asp-page="Create" class="btn btn-info form-control text-white">Create New Movie</a>
        </div>
        <div class="col-12 border p-3 mt-3">
            <form method="post">
                @if (Model.Movies.Count() > 0)
                {
                    <table class="table table-striped border">
                        <tr class="table-secondary">
                            <th>
                                <label asp-for="Movies.FirstOrDefault().Name"></label>
                            </th>
                            <th>
                                @*Html.DisplayNameFor(m => m.Movies.FirstOrDefault().Director)*@
                                <label asp-for="Movies.FirstOrDefault().Director"></label>
                            </th>
                            <th>
                                <label asp-for="Movies.FirstOrDefault().Production"></label>
                            </th>
                            <th>

                            </th>
                        </tr>
                        @foreach (var movie in Model.Movies)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(m => movie.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => movie.Director)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => movie.Production)
                                </td>
                                <td>
                                    <button asp-page-handler="Delete" asp-route-id="@movie.Id" onclick="return confirm('Are you sure you want to delete this record?')" class="btn btn-danger btn-sm">Delete</button>
                                    <a asp-page="Edit" asp-route-id="@movie.Id" class="btn btn-success btn-sm text-white">Edit</a>
                                </td>
                            </tr>
                        }
                    </table>
                }
                else
                {
                    <p>No Movies availale to display</p>
                }
            </form>
        </div>

        <div class="col-12" style="text-align:center">
            <br />
            <span class="h3 text-info">OR</span>
            <br /><br />
        </div>
        <div class="col-12 border p-3">

            <table id="apiData" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th> Director</th>
                        <th> Production</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>

    </div>
@section Scripts{ 

           <script src="~/js/movieList.js"></script>
}
